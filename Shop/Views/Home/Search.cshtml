@model IEnumerable<Shop.Areas.Admin.Models.Product>

<!-- banner-bootom-w3-agileits -->
<div class="banner-bootom-w3-agileits">
    <div class="container">
      
        <div class="clearfix"></div>

        <div class="single-pro">
            @foreach (var item in Model)
            {
                <div class="col-md-3 product-men">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="~/images/product/@Html.DisplayFor(modelItem => item.Image)" alt="" class="pro-image-front">
                            <img src="~/images@Html.DisplayFor(modelItem => item.Image" alt="" class="pro-image-back">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a asp-controller="Home" asp-action="Single" asp-route-id="@item.Id" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                            @*<span class="product-new-top">New</span>*@

                        </div>
                        <div class="item-info-product ">
                            <h4><a asp-controller="Home" asp-action="Single" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></h4>
                            <div class="info-product-price">
                                <span class="item_price">@Html.DisplayFor(modelItem => item.Price)</span>
                             
                            </div>
                           

                        </div>
                    </div>
                </div>
            }

            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- //mens -->
